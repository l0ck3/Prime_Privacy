<div class="bg-blue">
  <div class="login-signup-container">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    placeholder: "you@mail.com",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    placeholder: "******",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class: "btn-black-and-blue-thin" %>
      </div>
    <% end %>
    <div class="formFooter">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "footer-link" %>
    <%= link_to "Don't have an account yet?", new_registration_path(resource_name), class: "footer-link" %>
    </div>
  </div>
</div>
