      <div class="linkedin-icon social-network-logo">
        <%= image_tag 'linkedin-logo.png', class: 'logo-social-media'%>
        <a href="#" ><%= image_tag "add.png", class: 'validate-icon' %></a>
      </div>
      <div class="google-plus-icon social-network-logo">
        <%= image_tag 'google-plus-logo.png', class: 'logo-social-media'%>
