<div class="row">
  <div class="prime-container bottom-margin">
  <% if current_user.facebook.nil?  && current_user.twitter.nil? %>
    <div class="socialmedia-explanation">
      <h2>Social network connections</h2>
      <h4>First, connect the account(s) you want to clean</h4>
    </div>
  <% end %>
    <div class="hidden-xs socialmedia-icons">
      <div class="facebook-icon social-network-logo">
        <%= image_tag 'facebook-logo.png', class: 'logo-social-media' %>
        <% if !current_user.facebook.nil? %>
          <%= image_tag "success.png", class: 'validate-icon'%>
        <% else %>
          <%= link_to user_facebook_omniauth_authorize_path do%>
            <%= image_tag "add.png", class: 'validate-icon' %>
          <% end %>
        <% end %>
      </div>
      <div class="twitter-icon social-network-logo">
        <%= image_tag 'twitter-logo.png', class: 'logo-social-media'%>
        <% if !current_user.twitter.nil? %>
        <%= image_tag "success.png", class: 'validate-icon'%>
        <% else %>
          <%= link_to user_twitter_omniauth_authorize_path do%>
            <%= image_tag "add.png", class: 'validate-icon' %></a>
          <% end %>
        <% end %>
      </div>
      <div class="instagram-icon social-network-logo">
